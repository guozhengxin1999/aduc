      ]
    },
    {
      "name": "cloud_analysis",
      "localContext": {
        "variables": [
          {
            "name": "threatLevel",
            "value": "0"
          }
        ]
      },
      "states": [
        {
          "name": "Processing",
          "initial": true,
          "on": [
            {
              "event": "detectionComplete",
              "actions": [
                {
                  "type": "invoke",
                  "serviceType": "deepAnalysis",
                  "input": [
                    {
                      "name": "video",
                      "value": "$videoData"
                    },
                    {
                      "name": "audio",
                      "value": "$audioData"
                    },
                    {
                      "name": "pressure",
                      "value": "$pressureData"
                    },
                    {
                      "name": "seat",
                      "value": "$seatData"
                    }
                  ],
                  "output": [
                    {
                      "reference": "threatLevel"
                    }
                  ],
                  "done": [
                    {
                      "name": "analysisComplete",
                      "channel": "global"
                    }
                  ]
                }
              ]
            },
            {
              "event": "analysisComplete",
              "guards": [
                {
                  "expression": "threadLevel > 8"
                }
              ],
              "action": [
                {
                  "type": "raise",
                  "event": {
                    "name": "accidentDetected",
                    "channel": "global"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
