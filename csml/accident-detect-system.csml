{
  "version":"0.1",
  "name": "Accident Detect System",
  "stateMachines": [
    {
      "name": "video",
      "localContext": {
        "variables":[
          {
            "name": "videoData",
            "value": "null"
          },
          {
            "name": "accidentDetected",
            "value": "false"
          }
        ]
      },
      "states": [
        {
          "name": "Monitoring",
          "initial": true,
          "entry": [
            {
              "type": "invoke",
              "serviceType": "captureVideo",
              "input": [
                {
                  "name": "cameraId",
                  "value": "road_sensor_1"
                }
              ],
              "output": [
                {
                  "reference": "videoData"
                }
              ],
              "done": [
                {
                  "name": "videoReady",
                  "channel": "internal"
                }
              ]
            }
          ],
          "on": [
            {
              "event": "videoReady",
              "guards": [
                {
                  "expression": "videoData.length >= 100"
                }
              ],
              "target": "DataTransmission"
            },
            {
              "event": "accidentDetected",
              "target": "AbnormalDetection"
            }
          ]
        },
        {
          "name": "DataTransmission",
          "entry": [
            {
              "type": "invoke",
              "serviceType": "transmitToCloud",
              "input": [
                {
                  "name": "data",
                  "value": "videoData"
                }
              ],
              "done": [
                {
                  "name":"transmitComplete",
                  "channel": "internal"
                }
              ]
            }
          ],
          "on": [
            {
              "event": "transmitComplete",
              "target": "Monitoring"
            },
            {
              "event": "accidentDetected",
              "target": "AbnormalDetection"
            }
          ]
        },
        {
          "name": "AbnormalDetection",
          "entry": [
            {
              "type": "invoke",
              "serviceType": "detectCollision",
              "input": [
                {
                  "name": "video",
                  "value": "videoData"
                }
              ],
              "output": [
                {
                  "reference": "accidentDetected"
                }
              ],
              "done": [
                {
                  "name": "detectionComplete",
                  "channel": "global"
                }
              ]
            }
          ],
          "on": [
            {
              "event": "detectionComplete",
              "target": "Recording"
            }
          ]
        },
        {
          "name": "Recording",
          "entry": [
            {
              "type": "invoke",
              "serviceType": "recordAccident",
              "input": [
                {
                  "name": "timestamp",
                  "value": "currentTime()"
                },
                {
                  "name": "location",
                  "value": "getGPS()"
                }
              ],
              "done": [
                {
                  "name": "recordingComplete",
                  "channel": "global"
                }
              ]
            }
          ],
          "on": [
            {
              "event": "recordingComplete",
              "target": "EmergencyNotification"
            }
          ]
        },
        {
          "name": "EmergencyNotification",
          "entry": [
            {
              "type": "invoke",
              "serviceType": "alertEmergencyServices",
              "done": [
                {
                  "name": "alertSent",
                  "channel": "global"
                }
              ]
            }
          ],
          "on": [
            {
              "event": "alertSent",
              "target": "Monitoring"
            }
          ]
        }
      ]
    },
    {
      "name": "microphone",
      "localContext": {
        "variables": [
          {
            "name": "audioData",
            "value": "null"
          },
          {
            "name": "abnormalSoundDetected",
            "value": "false"
          }
        ]
      },
      "states": [
        {
          "name":"Monitoring",
          "initial": true,
          "entry": [
            {
              "type":"invoke",
              "serviceType": "captureAudio",
              "input": [
                {
                  "name": "microphone",
                  "value": "mic_1"
                }
              ],
              "output": [
                {
                  "reference": "audioData"
                }
              ],
              "done": [
                {
                  "name": "audioReady",
                  "channel": "internal"
                }
              ]
            }
          ],
          "on": [
            {
              "event": "audioReady",
              "guards": [
                {
                  "expression": "audioData.length >= 100"
                }
              ],
              "target": "DataTransmission"
            },
            {
              "event": "abnormalSoundDetected",
              "target": "AbnormalDetection"
            }
          ]
        },
        {
          "name": "DataTransmission",
          "entry": [
            {
              "type": "invoke",
              "serviceType": "transmitToCloud",
              "input": [
                {
                  "name": "data",
                  "value": "audioData"
                }
              ],
              "done": [
                {
                  "name": "transmitComplete",
                  "channel": "internal"
                }
              ]
            }
          ],
          "on": [
            {
              "event": "transmitComplet",
              "target": "Monitoring"
            },
            {
              "event": "abnormalSoundDetected",
              "target": "AbnormalDetection"
            }
          ]
        },
        {
          "name": "AbnormalDetection",
          "entry": [
            {
              "type": "invoke",
              "serviceType": "detectAbnormalSound",
              "input": [
                {
                  "name":"audio",
                  "value": "audioData"
                }
              ],
              "output": [
                {
                  "reference": "abnormalSoundDetected"
                }
              ],
              "done": [
                {
                  "name": "detectionComplete",
                  "channel": "global"
                }
              ]
            }
          ],
          "on": [
            {
              "event": "detectionComplete",
              "target": "Recording"
            }
          ]
        },
        {
          "name": "Recording",
          "entry": [
            {
              "type": "invoke",
              "serviceType": "recordAbnormalSound",
              "input": [
                {
                  "name": "timestamp",
                  "value": "currentTime()"
                },
                {
                  "name": "location",
                  "value": "getGPS()"
                }
              ],
              "done": [
                {
                  "name": "recordingComplete",
                  "channel": "global"
                }
              ]
            }
          ],
          "on": [
            {
              "event": "recordingComplete",
              "target": "EmergencyNotification"
            }
          ]
        },
        {
          "name": "EmergencyNotification",
          "entry": [
            {
              "type": "invoke",
              "serviceType": "alertEmergencyServices",
              "done": [
                {
                  "name": "alertSent",
                  "channel": "global"
                }
              ]
            }
          ],
          "on": [
            {
              "event": "alertSent",
              "target": "Monitoring"
            }
          ]
        }
      ]
    },
