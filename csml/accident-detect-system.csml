      ]
    },
    {
      "name": "seat",
      "localContext": {
        "variables": [
          {
            "name": "seatData",
            "value": "null"
          },
          {
            "name": "abnormalPressureChangeDetected",
            "value": "false"
          }
        ]
      },
      "states": [
        {
          "name": "Monitoring",
          "initial":true,
          "entry": [
            {
              "type": "invoke",
              "serviceType": "captureSeatData",
              "input": [
                {
                  "name": "sensorId",
                  "value": "seat_sensor_1"
                }
              ],
              "output": [
                {
                  "reference": "seatData"
                }
              ],
              "done": [
                {
                  "name": "seatDataReady",
                  "channel": "internal"
                }
              ]
            }
          ],
          "on": [
            {
              "event": "seatDataReady",
              "guards": [
                {
                  "expression": "seatData.length >= 100"
                }
              ],
              "target": "DataTransmission"
            },
            {
              "event": "abnormalPressureChangeDetected",
              "target": "AbnormalDetection"
            }
          ]
        },
        {
          "name": "DataTransmission",
          "entry": [
            {
              "type": "invoke",
              "serviceType": "transmitToCloud",
